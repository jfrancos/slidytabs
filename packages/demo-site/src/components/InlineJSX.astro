---
import { Code } from "astro:components";
interface Props {
  code: string;
  heading?: boolean;
}
const { code, heading } = Astro.props;
---

{
  heading ? (
    <Code
      {code}
      lang="jsx"
      theme="github-light"
      class:list={[
        "text-sm text-nowrap inline rounded-sm !bg-neutral-100 leading-none",
        heading ? "p-2" : "py-3px px-6px",
      ]}
    />
  ) : (
    <div class="py-3px px-6px font-mono inline bg-neutral-200 rounded-sm text-sm">{code}</div>
  )
}
