---
import Toggle from "../components/svelte/Toggle.svelte";
import Demo from "../components/Demo.astro";
---

<html lang="en" class="h-screen">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>slidytabs</title>
  </head>
  <body class="flex flex-col h-screen bg-neutral-200 .gap-4 .sm:gap-0 .pt-6">
    <div class="px-8 py-6 color-neutral-700 flex flex-col gap-1">
      <div class="font-bold color-pink-700 tracking-wide text-2xl">
        slidytabs
      </div>
      <div class="font-medium">
        a simple utility for animating shadcn&ensp;
        <span
          class="font-mono font-semibold p-1 -m-1 rounded-sm text-xs bg-white color-sky-700 text-nowrap"
        >
          {"<Tabs />"}
        </span>
      </div>
      <!-- <div class="text-sm color-neutral-700">
        multi-framework demo powered by <div
          class="i-logos:astro align-middle inline-block"
        >
        </div> -->
    </div>
    <div class="flex flex-col grow gap-4">
      <Toggle client:idle />
      <div
        class="flex gap-8 grow *:xl:first:rounded-tr-xl *:xl:last:rounded-tl-xl"
      >
        <div id="svelte-demo" class="xl:block bg-white flex-1 shadow-xl pb-6">
          <div class="flex justify-center items-center flex-col gap-6 py-6">
            <a
              rel="noopener"
              target="_blank"
              class="font-medium underline"
              href="https://www.shadcn-svelte.com/docs/components/tabs"
              >shadcn-svelte</a
            ><div class="flex flex-col gap-12">
              <Demo
                lang="svelte"
                filename="BasicExample"
                highlight="{@attach () => {}}"
              />
              <Demo
                lang="svelte"
                filename="BasicExample"
                highlight="{@attach () => {}}"
              />
            </div>
          </div>
        </div>
        <div id="react-demo" class="xl:block bg-white flex-1 shadow-xl hidden">
          <div class="flex justify-center items-center flex-col gap-6 py-6">
            <a
              rel="noopener"
              target="_blank"
              class="font-medium underline"
              href="https://ui.shadcn.com/docs/components/tabs">shadcn</a
            ><div class="flex flex-col gap-12">
              <Demo
                lang="tsx"
                filename="BasicExample"
                highlight="ref={() => {}}"
              />
              <Demo
                lang="tsx"
                filename="BasicExample"
                highlight="ref={() => {}}"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>

<script>
  import { $framework } from "../lib/store";

  $framework.subscribe((framework) => {
    if (framework === "react") {
      document.getElementById("svelte-demo")?.classList.add("hidden");
      document.getElementById("react-demo")?.classList.remove("hidden");
    } else {
      document.getElementById("react-demo")?.classList.add("hidden");
      document.getElementById("svelte-demo")?.classList.remove("hidden");
    }
  });
</script>

