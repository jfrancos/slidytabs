---
import { Code } from "astro:components";
import { transformerMetaWordHighlight } from "@shikijs/transformers";
import code from "./basicExample?raw";
import { TabsDemo } from "./examples/BasicExample";

const meta = "/ref={() => {}}/";
---

<div class="flex flex-col border-gray-100 border-4 rounded-lg w-xl">
  <div class="p-8 flex justify-center">
    <TabsDemo client:load />
  </div>
  <Code
    theme="github-light"
    lang="jsx"
    class="text-sm px-6 py-5 !bg-neutral-100"
    transformers={[transformerMetaWordHighlight()]}
    {code}
    {meta}
  />
</div>
